@using Bufter.Model
@model Tuple<IEnumerable<Room>, IEnumerable<Person>>
@{
	ViewData["Title"] = "Home";
}

<div class="row">
	<div class="col-md-8 text-center p-4">
		<div class="row">
			@foreach (Person person in Model.Item2)
			{
				<div class="col-md-3 p-2">
					<a asp-controller="Home" asp-action="Item" asp-route-Room="@Context.Request.Query["Room"]" asp-route-Person="@person.Name" class="text-decoration-none text-black">
						<div class="card">
							@if (@person.Image != "")
							{
								<img src="~/uploads/@person.Image" class="card-img-top">
							}
							<div class="card-body">
								<h5 class="card-title">@person.Name</h5>
							</div>
						</div>
					</a>
				</div>
			}
		</div>

	</div>

	<div class="col-md-4 p-4 mt-4">
		<div class="btn-group-vertical" style="width: 100%">
			<a class="btn btn-primary" role="button" asp-controller="Home" asp-action="Room">Room: @Context.Request.Query["Room"]</a>
			<a class="btn btn-primary active" role="button" asp-controller="Home" asp-action="Person">Person</a>
			<a class="btn btn-primary disabled" role="button" asp-controller="Home" asp-action="Item">Item</a>
		</div>
	</div>
</div>

