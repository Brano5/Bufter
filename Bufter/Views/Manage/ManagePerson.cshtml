@using Bufter.Models
@model Tuple<IEnumerable<Room>, IEnumerable<Person>>
@{
	ViewData["Title"] = "Manage Person";
}

<div class="row">
	<div class="col-md-8 text-center p-4">
		<div class="row">
			<form name="personSearchForm" class="d-flex" role="search" asp-controller="Manage" asp-action="ManagePersonSearch" method="get">
				<select class="form-select w-30" id="RoomId" name="RoomId">
					<!option value="-1" @(Context.Request.Query["RoomId"] == "-1" ? "selected" : "")>Every</!option>
					@foreach (Room room in Model.Item1)
					{
						<!option value="@room.Id" @(Context.Request.Query["RoomId"] == room.Id.ToString() ? "selected" : "")>@room.Name</!option>
					}
				</select>
				<input class="form-control mx-2" type="search" placeholder="Search" aria-label="Search" id="Search" name="Search" autocomplete="off" value="@Context.Request.Query["Search"]" onkeyup="personSearchHint(this.value)" onfocus="personSearchHint(this.value)" @*onfocusout="personSearchHintClear()*@">
				<button class="btn btn-outline-primary" type="submit">Filter</button>
			</form>
			<div class="list-group" id="personSearchHintTxt" style="position: absolute; overflow: auto; z-index: 9999; width: 50%; "></div>
		</div>
		<div class="row">
			@foreach (Person person in Model.Item2)
			{
				<div class="col-12 col-md-6 col-lg-4 col-xl-3 p-2">
					<div class="card">
						<div class="h-8vw">
							@if (@person.Image != "")
							{
								<img src="~/uploads/@person.Image" alt="@person.Image" class="card-img-top img-letter">
							}
							else
							{
								<p class="mb-0 fs-5vw">@person.Name[0]</p>
							}
						</div>
						<div class="card-body">
							<h5 class="card-title">@person.Name</h5>
							<p class="card-text">@Model.Item1.FirstOrDefault(a => a.Id == person.RoomId)?.Name <br> <b>Bill: @person.Bill€</b> <br> Total bill: @person.TotalBill€</p>
							<a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editModal" data-bs-id="@person.Id" data-bs-name="@person.Name" data-bs-roomId="@person.RoomId" data-bs-bill="@person.Bill.ToString().Replace(",", ".")" data-bs-totalBill="@person.TotalBill.ToString().Replace(",", ".")" data-bs-image="@person.Image">Edit</a>
							<a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-bs-id="@person.Id" data-bs-name="@person.Name">Delete</a>
							<span class="d-inline-block" tabindex="0" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Created: @person.Created, Updated: @person.Updated">
								<svg width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
									<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
									<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
								</svg>
							</span>
							<div class="mt-1">
								<a class="btn btn-primary btn-sm" asp-controller="Manage" asp-action="AddMoney" asp-route-Person="@person.Name" asp-route-Amount="0">Clear bill</a>
								<a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addMoneyModal" data-bs-name="@person.Name">Add money</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
		<div class="row">
			<a class="btn btn-primary col-3 mx-auto" data-bs-toggle="modal" data-bs-target="#createModal">Create</a>
		</div>
	</div>

	<div class="col-md-4 p-4 mt-4">
		<div class="btn-group-vertical w-100">
			<a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="ManageRoom">Room</a>
			<a class="btn btn-primary active" role="button" asp-controller="Manage" asp-action="ManagePerson">Person</a>
			<a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="ManageItem">Item</a>
		</div>
	</div>
</div>

<script>
	function personSearchHint(search) {
		personSearchHintPos();
		personSearchHintClear();
		if (search.length == 0) {
			return;
		} else {
			var xmlhttp = new XMLHttpRequest();
			xmlhttp.onreadystatechange = function () {
				if (this.readyState == 4 && this.status == 200) {
					if(this.responseText != "null"){
						var a = this.responseText.slice(1, -1).split(',');
						for (var i = 0; i < a.length; i++) {
							var div = document.getElementById("personSearchHintTxt");
							var button = document.createElement("button");
							button.type = "button";
							button.className = "list-group-item list-group-item-action";
							//button.onclick = "setPersonSearch(this.value)";
							button.setAttribute("onclick", "setPersonSearch(this.textContent);");
							button.textContent = a[i];

							div.appendChild(button);
						}
					} else {
						var div = document.getElementById("personSearchHintTxt");
						var button = document.createElement("button");
						button.type = "button";
						button.className = "list-group-item list-group-item-action";
						button.disabled = true;
						button.textContent = "No match";

						div.appendChild(button);
					}
				}
			};
			xmlhttp.open("GET", "PersonSearchHint?Search=" + search, true);
			xmlhttp.send();
		}
	}

	function personSearchHintClear() {
		var div = document.getElementById("personSearchHintTxt");
		var child = div.lastElementChild;
		while (child) {
			div.removeChild(child);
			child = div.lastElementChild;
		}
	}

	function personSearchHintPos() {
		var input = document.getElementById("Search");
		var div = document.getElementById("personSearchHintTxt");

		div.style.width = input.offsetWidth + "px";
		div.style.left = input.offsetLeft + "px";
		div.style.top = input.offsetTop + input.offsetHeight + "px";
	}

	function setPersonSearch(value) {
		var input = document.getElementById("Search");
		input.value = value;
		document.personSearchForm.submit();
		console.log("hej" + value);
	}
</script>



<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-controller="Manage" asp-action="CreatePerson" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
				<div class="modal-header">
					<h5 class="modal-title">Create Person</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="row align-items-center">
						<label for="NameCreateModal" class="col-sm-3 col-form-label text-end">Name*</label>
						<div class="col-sm-9">
							<input class="form-control" type="text" id="NameCreateModal" name="Name" required>
							<div class="invalid-feedback">
								Please provide a valid name.
							</div>
						</div>
					</div>
					<div class="row align-items-center">
						<label for="RoomIdCreateModal" class="col-sm-3 col-form-label text-end">Room</label>
						<div class="col-sm-9">
							<select class="form-select" id="RoomIdCreateModal" name="RoomId" aria-label="Default select example" required>
								<option value="-1">Every</option>
								@foreach (Room room in Model.Item1)
								{
									<option value="@room.Id">@room.Name</option>
								}
							</select>
							<div class="invalid-feedback">
								Please provide a valid room.
							</div>
						</div>
					</div>
					<div class="row align-items-center">
						<label for="ImageCreateModal" class="col-sm-3 col-form-label text-end">Image</label>
						<div class="col-sm-9">
							<input class="form-control" type="file" id="ImageCreateModal" name="Image">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Create</button>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-controller="Manage" asp-action="EditPerson" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
				<div class="modal-header">
					<h5 class="modal-title">Edit Person</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="row align-items-center">
						<label for="NameEditModal" class="col-sm-3 col-form-label text-end">Name*</label>
						<div class="col-sm-9">
							<input class="form-control" type="text" id="NameEditModal" name="Name" required>
							<div class="invalid-feedback">
								Please provide a valid name.
							</div>
						</div>
					</div>
					<div class="row align-items-center">
						<label for="RoomIdEditModal" class="col-sm-3 col-form-label text-end">Room</label>
						<div class="col-sm-9">
							<select class="form-select" id="RoomIdEditModal" name="RoomId" aria-label="Default select example" required>
								<option value="-1">Every</option>
								@foreach (Room room in Model.Item1)
								{
									<option value="@room.Id">@room.Name</option>
								}
							</select>
							<div class="invalid-feedback">
								Please provide a valid room.
							</div>
						</div>
					</div>
					<div class="row align-items-center">
						<label for="BillEditModal" class="col-sm-3 col-form-label text-end">Bill*</label>
						<div class="col-sm-9">
							<input class="form-control" type="number" step="0.01" id="BillEditModal" name="Bill" min="-9999" max="9999" required>
							<div class="invalid-feedback">
								Please provide a valid bill.
							</div>
						</div>
					</div>
					<div class="row align-items-center">
						<label for="TotalBillEditModal" class="col-sm-3 col-form-label text-end">Total Bill*</label>
						<div class="col-sm-9">
							<input class="form-control" type="number" step="0.01" id="TotalBillEditModal" name="TotalBill" min="-9999" max="9999" required>
							<div class="invalid-feedback">
								Please provide a valid total bill.
							</div>
						</div>
					</div>
					<div class="row align-items-center">
						<label for="ImageEditModal" class="col-sm-3 col-form-label text-end">Image</label>
						<div class="col-sm-9">
							<input class="form-control" type="file" id="ImageEditModal" name="Image">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<input class="form-control" type="hidden" id="IdEditModal" Name="Id">
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>

