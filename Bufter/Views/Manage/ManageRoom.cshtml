@using Bufter.Model
@model IEnumerable<Room>
@{
	ViewData["Title"] = "Manage Room";
}

<div class="row">
	<div class="col-8 text-center p-4">
		<div class="row">
			@foreach (Room room in Model)
			{
				<div class="col-3 p-2">
					<div class="card" onclick="">
						<div class="card-body">
							<h5 class="card-title">@room.Name</h5>
							<a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editModal" data-bs-id="@room.Id">Edit</a>
							<a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-bs-id="@room.Id" data-bs-name="@room.Name">Delete</a>
						</div>
					</div>
				</div>
			}
		</div>
		<div class="row">
			<a class="btn btn-primary col-3 mx-auto" data-bs-toggle="modal" data-bs-target="#createModal">Create</a>
		</div>
	</div>

	<div class="col-4 p-4 mt-4 d-grid">
		<div class="btn-group-vertical">
			<a class="btn btn-primary active" role="button" asp-controller="Manage" asp-action="ManageRoom">Room</a>
			<a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="ManagePerson">Person</a>
			<a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="ManageItem">Item</a>
		</div>
	</div>
</div>



<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-controller="Manage" asp-action="CreateRoom" method="post">
				<div class="modal-header">
					<h5 class="modal-title">Create Room</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="row align-items-center">
						<label for="Name" class="col-sm-3 col-form-label text-end">Room name</label>
						<div class="col-sm-9">
							<input class="form-control" type="text" id="Name">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Create</button>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-controller="Manage" asp-action="EditRoom" method="post">
				<div class="modal-header">
					<h5 class="modal-title">Edit Room</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="row align-items-center">
						<label for="Name" class="col-sm-3 col-form-label text-end">Room name</label>
						<div class="col-sm-9">
							<input class="form-control" type="text" id="Name">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Delete Room</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>Delete Room?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="DeleteRoom" asp-route-Id="">Delete</a>
			</div>
		</div>
	</div>
</div>